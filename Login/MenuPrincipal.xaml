<Window x:Class="LoginApp.MenuPrincipal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="FERCO"
        Height="600"
        Width="1000"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="{StaticResource PrimaryBackgroundBrush}">
    <Window.Resources>
        
    </Window.Resources>


    <Border CornerRadius="10"
            Background="{StaticResource PrimaryBackgroundBrush}">

        <Grid Name="Principal"
                  Background="Transparent">
            <!--#REGION HEADER-->
            <Grid Name="Header"
                    Height="35"
                    VerticalAlignment="Top"
                     Background="Transparent">
                <Border CornerRadius="10,10,0,0"
                        Background="{StaticResource AccentBrush}"/>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="100"/>
                    </Grid.ColumnDefinitions>

                    <!--#REGION TITLE-->
                    <TextBlock Text="FERCO"
                                       Grid.Column="0"
                                       Foreground="{StaticResource PrimaryTextBrush}"
                                       FontSize="15"
                                       Margin="10,0,0,0"
                                       VerticalAlignment="Center"/>
                    <!--#ENDREGION-->
                    <!--#region Mi Cuenta-->
                    <Button Style="{DynamicResource BTNHEADERSTYLE}" x:Name="BtnCuenta"
                            Grid.Column="1"
                            Background="Transparent"
                            BorderBrush="Transparent"
                            FontSize="15"
                            Foreground="{StaticResource PrimaryTextBrush}"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Left"
                            Cursor="Hand">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="15"/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="1"
                                       Text="Mi Cuenta"
                                       Foreground="{StaticResource PrimaryTextBrush}"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       Margin="5,0,0,0"/>
                            <Image Grid.Column="0"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Source="pack://application:,,,/SCS/IMG/micuenta.png"/>
                        </Grid>

                    </Button>
                    <!--#endregion-->
                    <!--#region INFO-->
                    <Button Style="{DynamicResource BTNHEADERSTYLE}" x:Name="BtnInfo"
                            Grid.Column="1"
                            Background="Transparent"
                            BorderBrush="Transparent"
                            Foreground="{StaticResource PrimaryTextBrush}"
                            FontSize="15"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Right"
                            Cursor="Hand">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="15"/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Image Source="/SCS/IMG/about.png"
                                   Grid.Column="0"
                                   VerticalAlignment="Center"/>
                            <TextBlock
                                       Text="Acerca de"
                                       Foreground="{StaticResource PrimaryTextBrush}"
                                       Grid.Column="1"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       Margin="5,0,0,0"/>

                        </Grid>

                    </Button>
                    <!--#endregion-->
                    <!--#region MINIMIZAR-->
                    <Button Style="{StaticResource WindowControlButtonStyle}" x:Name="BtnMinimizar"
                            Grid.Column="2"
                            Background="Transparent"
                            BorderBrush="Transparent"
                            Height="25"
                            Width="25"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Top"
                            Margin="0,5,30,0" Cursor="Hand" Click="Minimizar">
                        <Image Source="pack://application:,,,/SCS/IMG/minimizar.png"
                               Cursor="Hand"/>

                    </Button>
                    <!--#endregion-->
                    <!--#region Cerrar -->
                    <Button Style="{StaticResource WindowControlButtonStyle}" x:Name="BtnCerrar"
                            Grid.Column="2"
                            Background="Transparent"
                            BorderBrush="Transparent"
                            Height="25"
                            Width="25"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Top"
                            Margin="0,5,5,0" Click="Cerrar">
                        <Image Source="pack://application:,,,/SCS/IMG/cerrar.png"
                               Cursor="Hand"/>

                    </Button>
                    <!--#endregion-->
                </Grid>
            </Grid>
            <!--#ENDREGION -->
            <!--#region CONTENIDO-->
            <Grid x:Name="GridContent"
       Background="Transparent"
       VerticalAlignment="Bottom"
       HorizontalAlignment="Right"
       Height="565"
       Width="925" PreviewMouseLeftButtonDown="PreviewMouseLeftButtomDownBG">
                <Border CornerRadius="0,0,0,10"
             Background="{StaticResource SecondaryBackgroundBrush}"
                        Padding="20"/>
                <TextBlock Text="TallerFERCO"
                           Foreground="{StaticResource PrimaryTextBrush}"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"
                           FontSize="50"/>


            </Grid>
            <!--#endregion-->
            <!--#REGION SIDEBAR-->
            <Grid x:Name="GridMenu"
                  Background="Transparent"
                  Width="75"
                  HorizontalAlignment="Left"
                  Margin="0,35,0,0">
                <!--#region Menu-->
                <Border Background="{StaticResource AccentBrush}"
                        CornerRadius="0,0,0,10"/>


                <!--#region Menu-->
                <StackPanel Background="Transparent"
                            VerticalAlignment="Top">
                    <!--#region sHOW/HIDE-->
                    <Grid Background="Transparent"
                          VerticalAlignment="Top"
                          HorizontalAlignment="Right"
                          Margin="0,10,10,0">
                        <ToggleButton Style="{StaticResource BtnShowHide}" x:Name="BtnShowHide"
                                      Width="30"
                                      Height="30"
                                      BorderBrush="Transparent" 
                                      Checked="TBShow" 
                                      Unchecked="TBHide"
                                      Cursor="Hand">
                            <ToggleButton.Background>
                                <ImageBrush ImageSource="/SCS/IMG/side-bar.png"/>
                            </ToggleButton.Background>
                            <ToggleButton.Triggers>
                                <!--#region HIDE-->
                                <EventTrigger RoutedEvent="ToggleButton.Unchecked">
                                    <BeginStoryboard>
                                        <Storyboard x:Name="HidePanel">
                                            <DoubleAnimation Storyboard.TargetName="GridMenu"
                                                             Storyboard.TargetProperty="Width"
                                                             BeginTime="0:0:0"
                                                             From="200" To=" 75"
                                                             Duration="0:0:0:0.5"/>
                                        </Storyboard>
                                    </BeginStoryboard>


                                </EventTrigger>

                                <!--#endregion-->
                                <!--#region SHOW-->
                                <EventTrigger RoutedEvent="ToggleButton.Checked">
                                    <BeginStoryboard>
                                        <Storyboard x:Name="ShowPanel">
                                            <DoubleAnimation Storyboard.TargetName="GridMenu"
                                                             Storyboard.TargetProperty="Width"
                                                             BeginTime="0:0:0"
                                                            From="75" To=" 200"
                                                            Duration="0:0:0:0.5"/>
                                        </Storyboard>
                                    </BeginStoryboard>


                                </EventTrigger>
                                <!--#endregion-->
                            </ToggleButton.Triggers>

                        </ToggleButton>

                    </Grid>
                    <!--#endregion-->
                    <!--#region LISTA-->
                    <ListView Background="Transparent"
                              BorderBrush="Transparent"
                              Margin="0,30,0,0"
                              ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                        <!--#region INICIO-->
                        <ListViewItem Style="{StaticResource ListViewStyle}" Height="70">
                            <Button Style="{StaticResource BtnListaStyle}" x:Name="BtnInicio"
                                    Height="70"
                                    Width="200"
                                    HorizontalAlignment="Left"
                                    Cursor="Hand"
                                    Background="Transparent"
                                    BorderBrush="Transparent">
                                <Grid Width="200">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="60"/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>
                                    <Image Width="50"
                                           Grid.Column="0"
                                           HorizontalAlignment="Center"
                                           Source="/SCS/IMG/menu.png"/>
                                    <TextBlock Grid.Column="1"
                                               Text="Inicio"
                                               Foreground="{StaticResource PrimaryTextBrush}"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"
                                               FontSize="15"
                                               FontWeight="SemiBold"/>
                                </Grid>
                            </Button>
                        </ListViewItem>
                        <!--#endregion-->
                        <!--#region  POS-->
                        <ListViewItem Style="{StaticResource ListViewStyle}" Height="70">
                            <Button Style="{StaticResource BtnListaStyle}" x:Name="BtnPOS"
                                    Height="70"
                                    Width="200"
                                    HorizontalAlignment="Left"
                                    Cursor="Hand"
                                    Background="Transparent"
                                    BorderBrush="Transparent">
                                <Grid Width="200">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="60"/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>
                                    <Image Width="50"
                                            Grid.Column="0"
                                            HorizontalAlignment="Center"
                                            Source="/SCS/IMG/venta.png"/>
                                    <TextBlock Grid.Column="1"
                                                Text="Punto de Ventas"
                                                Foreground="{StaticResource PrimaryTextBrush}"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                FontSize="15"
                                                FontWeight="SemiBold"/>
                                </Grid>
                            </Button>
                        </ListViewItem>
                        <!--#endregion-->
                        <!--#region BtnProductos-->
                        <ListViewItem Style="{StaticResource ListViewStyle}" Height="70">
                            <Button Style="{StaticResource BtnListaStyle}" x:Name="BtnProductos"
                                    Height="70"
                                    Width="200"
                                    HorizontalAlignment="Left"
                                    Cursor="Hand"
                                    Background="Transparent"
                                    BorderBrush="Transparent">
                                <Grid Width="200">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="60"/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>
                                    <Image Width="50"
                                            Grid.Column="0"
                                            HorizontalAlignment="Center"
                                            Source="/SCS/IMG/productos.png"/>
                                    <TextBlock Grid.Column="1"
                                                Text="Productos"
                                                Foreground="{StaticResource PrimaryTextBrush}"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                FontSize="15"
                                                FontWeight="SemiBold"/>
                                </Grid>
                            </Button>
                        </ListViewItem>
                        <!--#endregion-->
                        <!--#region Proveedores-->
                        <ListViewItem Style="{StaticResource ListViewStyle}" Height="70">
                            <Button Style="{StaticResource BtnListaStyle}" x:Name="BtnProveedores"
                                    Height="70"
                                    Width="200"
                                    HorizontalAlignment="Left"
                                    Cursor="Hand"
                                    Background="Transparent"
                                    BorderBrush="Transparent">
                                <Grid Width="200">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="60"/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>
                                    <Image Width="50"
                                            Grid.Column="0"
                                            HorizontalAlignment="Center"
                                            Source="/SCS/IMG/proveedor.png"/>
                                    <TextBlock Grid.Column="1"
                                                Text="Proveedores"
                                                Foreground="{StaticResource PrimaryTextBrush}"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                FontSize="15"
                                                FontWeight="SemiBold"/>
                                </Grid>
                            </Button>
                        </ListViewItem>
                        <!--#endregion-->
                    </ListView>
                    <!--#endregion-->


                </StackPanel>


                <!--#endregion-->

            </Grid>


            <!--ENDREGION-->
           
        </Grid>
    </Border>
</Window>