<Window x:Class="Login.View.ProveedorDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Nuevo proveedor" Height="200" Width="300">
    <StackPanel Margin="10">
        <Label Content="Nombre"/>
        <TextBox x:Name="txtNombre" Margin="0,0,0,5"/>

        <Label Content="Email"/>
        <TextBox x:Name="txtEmail" Margin="0,0,0,5"/>

        <Label Content="Dirección"/>
        <TextBox x:Name="txtDireccion" Margin="0,0,0,5"/>

        <Label Content="Teléfono"/>
        <TextBox x:Name="txtTelefono" Margin="0,0,0,10"/>

        <Button Content="Guardar" Click="BtnAgregar_Click"/>
    </StackPanel>

</Window>
