<UserControl x:Class="Login.View.InventarioControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Login.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="{StaticResource AccentBrush}">

    <Grid Margin="10">
        <StackPanel Orientation="Horizontal" Margin="0,0,0,10" VerticalAlignment="Top">
            <!-- ID Inventario -->
            <StackPanel Margin="0,0,10,0">
                <TextBlock Text="ID Inventario" Foreground="White" FontSize="12"/>
                <TextBox x:Name="txtId" Width="100" Height="25"/>
            </StackPanel>

            <!-- ID Producto -->
            <StackPanel Margin="0,0,10,0">
                <TextBlock Text="ID Producto" Foreground="White" FontSize="12"/>
                <TextBox x:Name="txtProducto" Width="100" Height="25"/>
            </StackPanel>

            <!-- Cantidad -->
            <StackPanel Margin="0,0,10,0">
                <TextBlock Text="Cantidad" Foreground="White" FontSize="12"/>
                <TextBox x:Name="txtCantidad" Width="100" Height="25"/>
            </StackPanel>

            <!-- Botones -->
            <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom">
                <Button Content="Agregar" Width="80" Height="30" Margin="0,0,10,0" Click="BtnAgregar_Click"/>
                <Button Content="Editar" Width="80" Height="30" Margin="0,0,10,0" Click="BtnEditar_Click"/>
                <Button Content="Eliminar" Width="80" Height="30" Click="BtnEliminar_Click"/>
            </StackPanel>
        </StackPanel>

        <DataGrid x:Name="dgInventario" AutoGenerateColumns="True" Height="300" />
    </Grid>
</UserControl>
