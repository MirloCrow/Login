<Window x:Class="LoginApp.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="FERCO" Height="500" Width="350"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#FF0D47A1">

    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                <GradientStop Color="#FF1976D2" Offset="0"/>
                <GradientStop Color="#FF0D47A1" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Border Background="#33FFFFFF" CornerRadius="12" Margin="30" Padding="20">
            <StackPanel VerticalAlignment="Center">

                <TextBlock Text="FERCO" 
                           FontSize="28" 
                           FontWeight="Bold" 
                           Foreground="White" 
                           HorizontalAlignment="Center" 
                           Margin="0,0,0,20" 
                           FontFamily="Segoe UI"/>

                <!-- Usuario -->
                <StackPanel Margin="0,0,0,15">
                    <TextBlock Text="Usuario" Foreground="White" FontSize="14" FontFamily="Segoe UI"/>
                    <TextBox x:Name="txtUsuario" Height="30" 
                             Background="Transparent" 
                             Foreground="White" 
                             BorderBrush="White" 
                             BorderThickness="0,0,0,1" 
                             FontSize="14"/>
                </StackPanel>

                <!-- Contraseña -->
                <StackPanel Margin="0,0,0,25">
                    <TextBlock Text="Password" Foreground="White" FontSize="14" FontFamily="Segoe UI"/>
                    <PasswordBox x:Name="txtPassword" Height="30" 
                                 Background="Transparent" 
                                 Foreground="White" 
                                 BorderBrush="White" 
                                 BorderThickness="0,0,0,1" 
                                 FontSize="14"/>
                </StackPanel>

                <!-- Botón login -->
                <Button Content="LOGIN" 
                        Height="40" 
                        Background="#FF0D47A1" 
                        Foreground="White" 
                        BorderThickness="0"
                        FontWeight="Bold"
                        FontFamily="Segoe UI"
                        Cursor="Hand"
                        Click="BtnLogin_Click"/>

                <TextBlock x:Name="lblMensaje" 
                           Foreground="OrangeRed" 
                           FontSize="12" 
                           Margin="0,15,0,0" 
                           TextAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
