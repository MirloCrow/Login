<Window x:Class="FERCO.View.Dialogs.IngresoInventarioDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:FERCO.ViewModel"
        Title="Asignar Unidades a Inventario"
        Height="400" Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="{StaticResource PrimaryBackgroundBrush}">

    <Window.DataContext>
        <vm:IngresoInventarioDialogViewModel />
    </Window.DataContext>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Título -->
            <RowDefinition Height="Auto"/>
            <!-- Nombre del producto -->
            <RowDefinition Height="*"/>
            <!-- DataGrid -->
            <RowDefinition Height="Auto"/>
            <!-- Botones -->
        </Grid.RowDefinitions>

        <!-- Título -->
        <TextBlock Text="Asignar Unidades a Inventario"
                   FontSize="20" FontWeight="Bold"
                   Foreground="{StaticResource PrimaryTextBrush}"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"/>

        <!-- Nombre del producto -->
        <TextBlock Grid.Row="1" Text="{Binding NombreProducto}"
                   FontSize="16" FontWeight="SemiBold"
                   Foreground="{StaticResource PrimaryTextBrush}"
                   Margin="0,0,0,10"
                   HorizontalAlignment="Center"/>

        <!-- Encabezado -->
        <StackPanel Grid.Row="2" Margin="0,10">
            <TextBlock Text="{Binding ResumenAsignacion}"
               FontWeight="SemiBold"
               Foreground="{StaticResource PrimaryTextBrush}"
               Margin="0,0,0,10"/>

            <ScrollViewer VerticalScrollBarVisibility="Auto" Height="200">
                <ItemsControl ItemsSource="{Binding Ubicaciones}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <TextBlock Text="{Binding DescripcionUbicacion}" Width="200" VerticalAlignment="Center"/>
                            <TextBox Width="80" Margin="10,0,0,0"
                             Text="{Binding Cantidad, UpdateSourceTrigger=PropertyChanged}"
                             PreviewTextInput="SoloNumerosHandler"
                             DataObject.Pasting="SoloNumerosPegarHandler"
                             VerticalAlignment="Center"/>
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </StackPanel>

        <!-- Botones -->
        <StackPanel Grid.Row="3" Orientation="Horizontal"
                    HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Cancelar" Width="100" Margin="0,0,10,0"
                    Click="Cancelar_Click"
                    Style="{StaticResource BTNHEADERSTYLE}"/>
            <Button Content="Confirmar" Width="100"
                    IsEnabled="{Binding PuedeConfirmar}"
                    Click="Confirmar_Click"
                    Style="{StaticResource BTNHEADERSTYLE}"/>

        </StackPanel>
    </Grid>
</Window>
