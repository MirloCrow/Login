<Window x:Class="FERCO.View.Dialogs.ClienteDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Agregar Cliente" Height="450" Width="400"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize"
        Background="{StaticResource PrimaryBackgroundBrush}">
    <Grid Background="{StaticResource PrimaryBackgroundBrush}" Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Nuevo Cliente" FontSize="20" FontWeight="Bold"
                   Foreground="{StaticResource PrimaryTextBrush}" Margin="0,0,0,20"
                   HorizontalAlignment="Center"/>

        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0">
                <TextBlock Text="RUT (sin puntos ni DV):" Foreground="{StaticResource PrimaryTextBrush}"/>
                <TextBox x:Name="txtRut"/>

                <TextBlock Text="Nombre:" Foreground="{StaticResource PrimaryTextBrush}"/>
                <TextBox x:Name="txtNombre"/>

                <TextBlock Text="Email:" Foreground="{StaticResource PrimaryTextBrush}"/>
                <TextBox x:Name="txtEmail"/>

                <TextBlock Text="Dirección:" Foreground="{StaticResource PrimaryTextBrush}"/>
                <TextBox x:Name="txtDireccion"/>

                <TextBlock Text="Teléfono:" Foreground="{StaticResource PrimaryTextBrush}"/>
                <TextBox x:Name="txtTelefono"/>
            </StackPanel>

            <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                <Button Content="Cancelar" Width="80" Margin="0,0,10,0" Click="BtnCancelar_Click" Style="{StaticResource BTNHEADERSTYLE}"/>
                <Button Content="Guardar" Width="80" Click="BtnGuardar_Click" Style="{StaticResource BTNHEADERSTYLE}"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
