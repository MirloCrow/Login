<UserControl x:Class="FERCO.View.ProductoControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="1000">

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*" />
            <ColumnDefinition Width="7*" />
        </Grid.ColumnDefinitions>

        <!-- Columna izquierda: Formulario de producto -->
        <StackPanel Grid.Column="0" Margin="10" Orientation="Vertical">
            <TextBlock Text="Formulario de Producto" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>

            <Label Content="Nombre" />
            <TextBox x:Name="txtNombre" />

            <Label Content="Descripción" />
            <TextBox x:Name="txtDescripcion" />

            <Label Content="Precio" />
            <TextBox x:Name="txtPrecio" />

            <Label Content="Codigo" />
            <TextBox x:Name="txtCodigo" />

            <Label Content="Categoría" />
            <StackPanel Orientation="Horizontal">
                <ComboBox x:Name="cmbCategoria" Width="180" />
                <Button Content="+" Width="30" Click="BtnAgregarCategoria_Click" Margin="5,0"/>
            </StackPanel>

            <Label Content="Proveedor" />
            <StackPanel Orientation="Horizontal">
                <ComboBox x:Name="cmbProveedor" Width="180" />
                <Button Content="+" Width="30" Click="BtnAgregarProveedor_Click" Margin="5,0"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,10">
                <Button Content="Guardar" Width="100" Click="BtnAgregarProducto_Click"/>
                <Button Content="Limpiar" Width="100" Margin="10,0,0,0" Click="BtnLimpiar_Click"/>
            </StackPanel>
        </StackPanel>

        <!-- Columna derecha: Búsqueda + listado + ubicaciones -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Sección de búsqueda -->
            <StackPanel Orientation="Horizontal" Margin="10" Grid.Row="0">
                <ComboBox x:Name="cmbTipoBusqueda" Width="150" SelectedIndex="0">
                    <ComboBoxItem Content="Nombre" />
                    <ComboBoxItem Content="Código" />
                    <ComboBoxItem Content="Categoría" />
                </ComboBox>
                <TextBox x:Name="txtBuscar" Width="250" Margin="10,0" KeyDown="TxtBuscar_KeyDown"/>
                <Button Content="Buscar" Width="100" Click="BtnBuscar_Click"/>
            </StackPanel>

            <!-- Lista de productos -->
            <DataGrid x:Name="dgProductos"
                      Grid.Row="1"
                      AutoGenerateColumns="False"
                      SelectionChanged="DgProductos_SelectionChanged"
                      Margin="10">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Nombre" Binding="{Binding NombreProducto}" Width="2*" />
                    <DataGridTextColumn Header="Descripción" Binding="{Binding DescripcionProducto}" Width="2.5*" />
                    <DataGridTextColumn Header="Precio" Binding="{Binding PrecioProducto}" Width="*" />
                    <DataGridTextColumn Header="Categoría" Binding="{Binding NombreCategoria}" Width="1.5*" />
                    <DataGridTextColumn Header="Proveedor" Binding="{Binding NombreProveedor}" Width="1.5*" />
                </DataGrid.Columns>
            </DataGrid>

            <!-- Sección de stock por ubicación -->
            <GroupBox Header="Ubicaciones de Inventario" Grid.Row="2" Margin="10">
                <StackPanel>
                    <!-- Stock total del producto -->
                    <TextBlock x:Name="txtStockTotal"
                   FontWeight="Bold"
                   Foreground="DarkGreen"
                   FontSize="14"
                   Margin="0,0,0,5"
                   Text="Stock total: -" />

                    <!-- DataGrid de ubicaciones -->
                    <DataGrid x:Name="dgUbicaciones"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  IsReadOnly="False"
                  CellEditEnding="DgUbicaciones_CellEditEnding"
                  Height="150">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Ubicación" Binding="{Binding DescripcionUbicacion}" IsReadOnly="True" Width="2*" />
                            <DataGridTextColumn Header="Stock" Binding="{Binding Cantidad}" Width="100" />
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Ingreso de nuevo stock -->
                    <StackPanel x:Name="panelAgregarStock" Orientation="Horizontal" Margin="0,10,0,0" Visibility="Collapsed">
                        <Label Content="Agregar stock:" VerticalAlignment="Center"/>
                        <TextBox x:Name="txtStockNuevo" Width="100" Margin="5,0"/>
                        <ComboBox x:Name="cmbInventario" Width="200" Margin="5,0" DisplayMemberPath="Descripcion"/>
                        <Button Content="Agregar" Width="100" Click="BtnAgregarStock_Click"/>
                    </StackPanel>
                </StackPanel>
            </GroupBox>
        </Grid>
    </Grid>
</UserControl>
