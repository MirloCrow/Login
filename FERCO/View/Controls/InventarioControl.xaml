<UserControl x:Class="FERCO.View.InventarioControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FERCO.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="{StaticResource AccentBrush}">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- FORMULARIO -->
            <GroupBox Header="Agregar / Editar Ubicación" Grid.Row="0" Padding="10">
                <StackPanel Orientation="Vertical">
                    <!-- ID Inventario -->
                    <TextBlock Text="ID Inventario" Foreground="White" FontSize="12"/>
                    <TextBox x:Name="txtIdInventario" Width="200" Height="25"/>

                    <!-- Descripción Ubicación -->
                    <TextBlock Text="Descripción Ubicación" Foreground="White" FontSize="12" Margin="0,10,0,0"/>
                    <TextBox x:Name="txtDescripcion" Width="400" Height="25"/>

                    <!-- Productos en la Ubicación -->
                    <TextBlock Text="Productos en esta ubicación (ID Producto - Cantidad)" Foreground="White" FontSize="12" Margin="0,10,0,0"/>
                    <DataGrid x:Name="dgProductosEnUbicacion" AutoGenerateColumns="True" Height="100"/>

                    <!-- Botones -->
                    <StackPanel Orientation="Horizontal" Margin="0,10">
                        <Button Content="Agregar ubicación" Width="130" Margin="5" Click="BtnAgregar_Click"/>
                        <Button Content="Editar ubicación" Width="130" Margin="5" Click="BtnEditar_Click"/>
                        <Button Content="Eliminar ubicación" Width="130" Margin="5" Click="BtnEliminar_Click"/>
                    </StackPanel>
                </StackPanel>
            </GroupBox>

            <!-- LISTA GENERAL -->
            <GroupBox Header="Ubicaciones con productos" Grid.Row="1" Margin="0,10,0,0" Padding="10">
                <DataGrid x:Name="dgInventario" AutoGenerateColumns="True" Height="300"/>
            </GroupBox>
        </Grid>
    </ScrollViewer>
</UserControl>

